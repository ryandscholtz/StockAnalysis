# Production Environment Configuration for Stock Analysis API
# This file contains production-specific environment variables
# Sensitive values should be stored in AWS Secrets Manager

# Environment
ENVIRONMENT=production

# Database Configuration
DYNAMODB_TABLE_NAME=stock-analyses-production
DYNAMODB_REGION=eu-west-1

# Cache Configuration (Redis)
REDIS_URL=redis://stock-analysis-redis-production.cache.amazonaws.com:6379/0

# AWS Configuration
AWS_REGION=eu-west-1
AWS_DEFAULT_REGION=eu-west-1

# Secrets Manager
SECRETS_ARN=arn:aws:secretsmanager:eu-west-1:295202642810:secret:stock-analysis-secrets-production

# Logging Configuration
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Monitoring and Observability
CLOUDWATCH_METRICS_ENABLED=true
CLOUDWATCH_DASHBOARDS_ENABLED=true
AWS_XRAY_TRACING_NAME=stock-analysis-api-production
AWS_XRAY_DAEMON_ADDRESS=127.0.0.1:2000

# Performance Configuration
METRICS_BATCH_SIZE=20
METRICS_FLUSH_INTERVAL=60

# Security Configuration
HTTPS_ONLY=true
CORS_ORIGINS=https://stockanalysis.cerebrum.com

# API Configuration
API_RATE_LIMIT=1000
API_BURST_LIMIT=2000

# Feature Flags
USE_AWS_BEDROCK=true
USE_TEXTRACT=true
INIT_DASHBOARDS_ON_STARTUP=false
EC2_AUTO_STOP=false

# CDN Configuration
CDN_BASE_URL=https://d1234567890.cloudfront.net
STATIC_BASE_URL=/static

# External API Configuration (stored in Secrets Manager)
# These are placeholders - actual values retrieved from Secrets Manager
ALPHA_VANTAGE_API_KEY=FROM_SECRETS_MANAGER
MARKETSTACK_API_KEY=FROM_SECRETS_MANAGER
FRED_API_KEY=FROM_SECRETS_MANAGER
FMP_API_KEY=FROM_SECRETS_MANAGER

# JWT Configuration (stored in Secrets Manager)
JWT_SECRET=FROM_SECRETS_MANAGER
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Encryption Configuration (stored in Secrets Manager)
ENCRYPTION_KEY=FROM_SECRETS_MANAGER